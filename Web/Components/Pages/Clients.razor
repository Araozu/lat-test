@page "/clients"
@rendermode InteractiveServer
@using Acide.Latesa.Web.Models
@using Acide.Latesa.Web.Services
@inject ClientService ClientService
@inject IJSRuntime JSRuntime

<PageTitle>Clients - CRM</PageTitle>

<h1>Client Management</h1>
<p>Manage your CRM clients</p>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="ShowCreateForm">
        <span class="bi bi-plus-circle"></span> Add New Client
    </button>
</div>

@if (showForm)
{
    <div class="card mb-4">
        <div class="card-header">
            <h5>@(isEditing ? "Edit Client" : "New Client")</h5>
        </div>
        <div class="card-body">
            <EditForm Model="currentClient" OnValidSubmit="SaveClient">
                <DataAnnotationsValidator />
                <ValidationSummary class="text-danger" />
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <InputText class="form-control" @bind-Value="currentClient.Name" />
                    <ValidationMessage For="@(() => currentClient.Name)" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <InputText class="form-control" @bind-Value="currentClient.Email" type="email" />
                    <ValidationMessage For="@(() => currentClient.Email)" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Phone</label>
                    <InputText class="form-control" @bind-Value="currentClient.Phone" />
                    <ValidationMessage For="@(() => currentClient.Phone)" />
                </div>
                <div class="mb-3">
                    <label class="form-label">Company</label>
                    <InputText class="form-control" @bind-Value="currentClient.Company" />
                    <ValidationMessage For="@(() => currentClient.Company)" />
                </div>
                <div>
                    <button type="submit" class="btn btn-success">
                        <span class="bi bi-check-circle"></span> Save
                    </button>
                    <button type="button" class="btn btn-secondary ms-2" @onclick="CancelForm">
                        <span class="bi bi-x-circle"></span> Cancel
                    </button>
                </div>
            </EditForm>
        </div>
    </div>
}

@if (clients == null)
{
    <p><em>Loading...</em></p>
}
else if (!clients.Any())
{
    <div class="alert alert-info">
        No clients found. Click "Add New Client" to create one.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Company</th>
                    <th>Created Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var client in clients)
                {
                    <tr>
                        <td>@client.Name</td>
                        <td>@client.Email</td>
                        <td>@client.Phone</td>
                        <td>@client.Company</td>
                        <td>@client.CreatedDate.ToShortDateString()</td>
                        <td>
                            <button class="btn btn-sm btn-warning" @onclick="() => EditClient(client)">
                                <span class="bi bi-pencil"></span> Edit
                            </button>
                            <button class="btn btn-sm btn-danger ms-1" @onclick="() => DeleteClient(client.Id)">
                                <span class="bi bi-trash"></span> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="mt-3">
        <strong>Total Clients:</strong> @clients.Count
    </div>
}

@code {
    private List<Client>? clients;
    private Client currentClient = new();
    private bool showForm = false;
    private bool isEditing = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadClients();
    }

    private async Task LoadClients()
    {
        clients = await ClientService.GetAllClientsAsync();
    }

    private void ShowCreateForm()
    {
        currentClient = new Client();
        isEditing = false;
        showForm = true;
    }

    private void EditClient(Client client)
    {
        currentClient = new Client
        {
            Id = client.Id,
            Name = client.Name,
            Email = client.Email,
            Phone = client.Phone,
            Company = client.Company,
            CreatedDate = client.CreatedDate
        };
        isEditing = true;
        showForm = true;
    }

    private async Task SaveClient()
    {
        if (isEditing)
        {
            await ClientService.UpdateClientAsync(currentClient);
        }
        else
        {
            await ClientService.CreateClientAsync(currentClient);
        }

        await LoadClients();
        CancelForm();
    }

    private void CancelForm()
    {
        showForm = false;
        currentClient = new Client();
        isEditing = false;
    }

    private async Task DeleteClient(int id)
    {
        var client = clients?.FirstOrDefault(c => c.Id == id);
        if (client == null) return;

        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"Are you sure you want to delete {client.Name}?");
        
        if (confirmed && await ClientService.DeleteClientAsync(id))
        {
            await LoadClients();
        }
    }
}
